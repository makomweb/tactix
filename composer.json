{
    "name": "makomweb/tactix",
    "description": "Tooling for tactical domain driven design",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tactix\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tactix\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Martin Komischke",
            "email": "martin.komischke@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "nikic/php-parser": "^5.7",
        "xmolecules/phpmolecules": "^0.2.0",
        "symfony/console": "^6.4 || ^7.4 || ^8.0",
        "symfony/serializer": "^6.4 || ^7.4 || ^8.0",
        "symfony/http-kernel": "^6.4 || ^7.4 || ^8.0",
        "symfony/dependency-injection": "^6.4 || ^7.4 || ^8.0",
        "symfony/config": "^6.4 || ^7.4 || ^8.0",
        "symfony/yaml": "^6.4 || ^7.4 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpunit/phpunit": "^11"
    },
    "scripts": {
        "qa": [
            "vendor/bin/phpstan analyse --memory-limit=1G",
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/phpunit"
        ],
        "sa": "vendor/bin/phpstan analyse --memory-limit=1G",
        "test": "vendor/bin/phpunit",
        "cs": "vendor/bin/php-cs-fixer fix"
    },
    "scripts-descriptions": {
        "qa": "Run all QA tools. Bail out when an error occurs.",
        "cs": "Run the code style fixer",
        "sa": "Run the static analyzer",
        "test": "Run all tests locally"
    }
}
